<?xml version="1.0" encoding="UTF-8"?>
<datasources>
	<local-tx-datasource>
		<jndi-name>jdbc/pelpDS</jndi-name>
		<connection-url>jdbc:mysql://localhost:3306/pelp
		</connection-url>
		<driver-class>com.mysql.jdbc.Driver</driver-class>
		<min-pool-size>10</min-pool-size>
		<max-pool-size>20</max-pool-size>
		<user-name>pelp</user-name>
		<password>.pelp.</password>
		<metadata>
			<type-mapping>mySQL</type-mapping>
		</metadata>
	</local-tx-datasource>
</datasources>